---
interface Props {
  title: string;
  description?: string;
  image?: string;
  href?: string;
}

const { title, description = '', image, href = '#' }: Props = Astro.props;
---

<article class="bg-white shadow-sm rounded-lg overflow-hidden hover:shadow-md transition p-0">
  {image ? (
    <figure class="w-full h-48 overflow-hidden">
      <img src={image} alt={title} class="w-full h-full object-cover" />
    </figure>
  ) : null}

  <div class="p-6">
    <h3 class="text-xl font-playfair mb-2">{title}</h3>
    {description ? <p class="text-gray-700 mb-4">{description}</p> : null}
    <a href={href} class="text-deep-blue font-medium hover:underline">Learn more</a>
  </div>
</article>