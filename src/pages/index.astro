---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';

export const Layout = BaseLayout;
export const title = "AdlerPrice - Consulting, Negligence Claims, Design Thinking";
export const description = "Welcome to AdlerPrice, a Cape Town-based consulting practice specializing in Architect Negligence Claims, Consulting, and Design Thinking since 1988.";
---

<Hero />

<section class="py-12 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-playfair mb-4">Welcome to AdlerPrice</h2>
    <p class="text-lg text-gray-700 mb-8">
      Since 1988, AdlerPrice has been dedicated to delivering exceptional consulting services, specializing in Architect Negligence Claims, Consulting, and Design Thinking. Our approach combines strong design principles with meticulous project administration, ensuring successful outcomes for projects of all scales.
    </p>
    <div class="flex justify-center space-x-4">
  <a href="/about" class="bg-deep-blue text-white py-2 px-4 rounded hover:bg-deep-blue-dark transition">Learn More About Us</a>
      <a href="/services" class="bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300 transition">Our Services</a>
      <a href="/projects" class="bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300 transition">View Our Projects</a>
  <a href="/contact" class="bg-deep-blue text-white py-2 px-4 rounded hover:bg-deep-blue-dark transition">Contact Us</a>
    </div>
  </div>
</section>