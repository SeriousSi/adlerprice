---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
import SEO from '../components/SEO.astro';

export const title = 'Services | AdlerPrice';
---

<BaseLayout title={title}>

<SEO />

<section class="py-12">
  <div class="container mx-auto text-center">
    <h1 class="text-4xl font-playfair mb-6">Our Services</h1>
    <p class="text-lg text-gray-700 mb-12">At AdlerPrice, we specialize in providing expert consulting services in the following areas:</p>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  <Card title="Architect Negligence Claims" description="Representation and advice on professional liability and claims." href="/services/architect-negligence" />
  <Card title="Consulting" description="Project advisory, documentation review and practice consulting." href="/services/consulting" />
  <Card title="Design Thinking" description="Facilitated workshops and strategic design processes." href="/services/design-thinking" />
    </div>
  </div>
</section>

</BaseLayout>